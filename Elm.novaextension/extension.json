{
    "identifier": "sciencefidelity.elm",
    "name": "Elm",
    "organization": "Matt Cook",
    "description": "Elm Language Definition for Nova",
    "version": "0.1.0",
    "categories": ["languages"],
    "license": "MIT",
    "repository": "https://github.com/sciencefidelity/Nova-Elm",
    "bugs": "https://github.com/sciencefidelity/Nova-Elm/issues",
    "homepage": "https://mattcook.dev",
    "keywords": ["elm"],

    "main": "main.dist.js",

    "activationEvents": [
        "onLanguage:elm",
        "onWorkspaceContains:pubspec.yaml"
    ],
    "entitlements": {
        "process": true,
        "filesystem": "readwrite"
    },

    "config": [
        {
            "key": "example.language-server-path",
            "title": "Language Server Path",
            "type": "path",
            "placeholder": "/usr/local/bin/example"
        }
    ]
}
